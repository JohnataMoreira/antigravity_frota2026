{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./dist",
        "noEmit": false,
        "module": "CommonJS",
        "declaration": false,
        "baseUrl": "./",
        "types": [
            "node",
            "jest"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}